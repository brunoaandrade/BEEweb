{% assets "threejs_libs" %}
    <script type="text/javascript" src="{{ ASSET_URL }}"></script>
{% endassets %}

<div id="workbench-buttons" class="row-fluid worbench-top-buttons">

    <button class="btn btn-block span3" id="save_scene" onclick="BEEwb.main.saveScene();">
        <i class="icon-save" ></i>
        {{ _('Save Scene') }}
    </button>

    <div class="span6">
        <div id="out-bound-msg" class="alert alter-warning workbench-alert text-center" style="display: none;">
            <i class="icon-warning-sign"></i>
            {{ _('The model is out of the printing area.') }}
        </div>
    </div>
    <button class="btn btn-block btn-primary span3" id="print_scene"
            data-bind="click: startPrint, enable: loginState.isUser() && !connection.isConnecting() && !state.enablePrint()">
        <i class="icon-print" ></i>
        {{ _('Prepare Print...') }}
    </button>

</div>

<div id="stl_container" ></div>

<div id="workbench-buttons-bottom" class="row-fluid">

    <div class="span3">
    <button class="btn btn-block" id="clean_bed" onclick="BEEwb.main.clearBed();" >
        <i class="icon-eraser" ></i>
        {{ _('Clear Platform') }}
    </button>
    </div>
    <div class="span6">

    </div>
    <div class="span3 text-right">
        <button class="btn" id="reset_camera" onclick="BEEwb.main.resetCamera();" title="{{ _('Reset position') }}">
            <i class="icon-screenshot" ></i>
        </button>
    </div>
</div>
<script>

    BEEwb.main.init();

</script>
