<a href="javascript:void(0)" class="dropdown-toggle">
    <span class="m-icon usericon-xs"></span> <span data-bind="text: loginState.userMenuText">{{ _('Login') }}</span>
    <b class="caret"></b>
</a>
<div id="login_dropdown_loggedout" style="padding: 15px" class="dropdown-menu" data-bind="css: {hide: loginState.loggedIn(), 'dropdown-menu': !loginState.loggedIn()}">
    <form id="loginForm" data-bind="event: {'submit': loginState.prepareLogin }">
        <label for="login_user">{{ _('Username') }}</label>
        <input type="text" id="login_user" name="username" data-bind="valueWithInit: loginState.loginUser" placeholder="{{ _('Username') }}" autocapitalize="none">
        <label for="login_pass">{{ _('Password') }}</label>
        <input type="password" id="login_pass" name="password" data-bind="valueWithInit: loginState.loginPass" placeholder="{{ _('Password') }}">
        <label class="checkbox">
            <input type="checkbox" id="login_remember" data-bind="checked: loginState.loginRemember"> {{ _('Remember me') }}
        </label>
        <button type="submit" class="btn btn-block btn-primary" id="login_button">{{ _('Login') }}</button>
    </form>
</div>
<ul id="login_dropdown_loggedin" class="hide" data-bind="css: {hide: !loginState.loggedIn(), 'dropdown-menu multi-level': loginState.loggedIn()}">
    <li class="dropdown-submenu">
        <a tabindex="-1" href="#" class="dropdown-toggle" data-toggle="dropdown" >
            <span class="m-icon helpicon"></span> <span >{{ _('Help') }}</span>
        </a>
        <ul id="help_dropdown_menu" class="dropdown-menu" >
            <li><a tabindex="-1" href="https://beeverycreative.com/faq/" target="_blank" id="faq_button">{{ _('FAQ') }}</a></li>
            <li><a href="https://beeverycreative.com/troubleshooting/" target="_blank" id="troubleshooting_button">{{ _('Troubleshooting') }}</a></li>
        </ul>
    </li>
    <li><a href="#" id="usersettings_button" data-bind="click: function() { usersettings.show(); }"><span class="m-icon usersettingsicon"></span>{{ _('User Settings') }}</a></li>
    <li><a href="#about_dialog" data-bind="click: function() { $root.showAboutBee(); }" id="about_button" ><span class="m-icon abouticon"></span>{{ _('About') }}</a></li>
    <li class="divider" />
    <li><a href="#" id="logout_button" data-bind="click: loginState.logout"><span class="m-icon logouticon"></span>{{ _('Logout') }}</a></li>
</ul>
