                    <!--</div>-->
                <!--</div>-->
                <label class="control-label">{{ _('Details') }}</label>
                    <div class="control-group">
                        <div class="controls">
                            <div class="filament-div">
                                <span class="small-label">{{ _('FILAMENT') }}:</span>
                                <span class="filament" data-bind="text: selColor, visible: forPrint()"></span>
                                <select data-bind="options: colors, value: selColor, valueAllowUnset: false, visible: !forPrint()" ></select>
                                <span class="remaining-filament">
                                    <div>{{ _('Remaining filament') }}:  <span data-bind="text: filamentInSpool" ></span> (g)</div>
                                </span>
                            </div>
                            <div class="nozzle-div">
                                <span class="small-label">{{ _('NOZZLE') }}: </span>
                                <span class="nozzle" data-bind="text: selNozzle, visible: forPrint()"></span>
                                <select data-bind="options: nozzleTypes, value: selNozzle, valueAllowUnset: false, visible: !forPrint()" ></select>
                            </div>
                        </div>
                    </div>
